<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Url Shortner</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortner</h1>
      <form action="/shortUrl" method="POST" class="my-4 row g-3">
        <div class="col-md-10">
          <label for="fullUrl" class="visually-hidden">Url</label>
          <input
            class="form-control mr-6"
            placeholder="https://website.com"
            type="url"
            name="fullUrl"
            id="fullUrl"
            required
          />
        </div>

        <div class="col-sm-2">
          <button type="submit" class="btn btn-success">Shrink</button>
        </div>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(item => { %>
          <tr>
            <td>
              <a href="<%= item.full %> "> <%= item.full %> </a>
            </td>
            <td>
              <a href="<%= item.short %> " target="_blank"
                ><%= item.short %>
              </a>
            </td>
            <td><%= item.clicks %></td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </body>
</html>
